<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLInspectionReport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    android:weightSum="15"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="437dp"
        android:layout_height="94dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logopng"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="[Company Name Not Inserted]"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/streetAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="[Street Address Not Inserted]"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyName" />

    <TextView
        android:id="@+id/cityStateZipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="[City,State,Zip Not Inserted]"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetAddress" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="14.00">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/trackTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo">

                <TableRow android:weightSum="10">

                    <TextView
                        android:id="@+id/col1"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/col2"
                        android:text=""
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/col3"
                        android:text=""
                        android:layout_weight="3.5"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/trackdesc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track Repairs"
                        android:layout_weight="1"

                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/col4"
                        android:text=""
                        android:layout_weight="1"

                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/col5"
                        android:text=""
                        android:layout_weight="1"

                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/col6"
                        android:text=""
                        android:layout_weight="1"

                        android:textSize="20sp" />

                </TableRow>

                <TableRow android:weightSum="10">

                    <TextView
                        android:id="@+id/trackids"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tracknumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Track"
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tracklocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:layout_weight="3"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/trackdesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_weight="2"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/trackunit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Unit"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/trackquant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/trackpri"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:layout_weight="1"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/switchTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trackTable">

                <TableRow android:weightSum="10">

                    <TextView
                        android:id="@+id/scol1"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/scol2"
                        android:text=""
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/scol3"
                        android:text=""
                        android:layout_weight="3.5"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/strackdesc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Track Repairs"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:weightSum="10">

                    <TextView
                        android:id="@+id/strackids"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/stracknumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Switch"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/stracklocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"

                        android:text="Location"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/strackdesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_weight="2"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/strackunit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Unit"
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/strackquant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:layout_weight="1"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/strackpri"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:layout_weight="1"

                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sendToDriveReport"
                    android:text="Send to Drive"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>